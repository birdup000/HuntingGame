[run]
# Coveragerc file for Hunting Game
source = .
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */*.pyc
    */temp*/*
    */backup*/*
    */old*/*
    env/*
    venv/*
    .venv/*
    .git/*
    .pytest_cache/*
    htmlcov/*
    *.backup.*
    *backup*.py

[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    pragma: no cover
    def __repr__
    if self\.debug
    if settings\.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class.*ABC
    @(abc\.)?abstractmethod

[html]
directory = htmlcov
